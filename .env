# Nexus Security - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_USER=nexus_user
DATABASE_PASSWORD=nexus_password
DATABASE_NAME=nexus_security
DATABASE_URL=postgresql://nexus_user:nexus_password@postgres:5432/nexus_security

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=change-this-to-a-long-random-string-at-least-32-characters
JWT_ACCESS_TOKEN_EXPIRY_HOURS=24
JWT_REFRESH_TOKEN_EXPIRY_DAYS=30

# Email Configuration (for notifications and user service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@nexus-security.io

# Blockchain Configuration (for payment service)
BLOCKCHAIN_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
BLOCKCHAIN_CHAIN_ID=1
TREASURY_PRIVATE_KEY=your-treasury-private-key-here

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
RUST_LOG=info

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@nexus-security.io
PGADMIN_DEFAULT_PASSWORD=admin

# Application URLs
API_GATEWAY_URL=http://localhost:8080
USER_SERVICE_URL=http://localhost:8081
ANALYSIS_ENGINE_URL=http://localhost:8082
BOUNTY_MANAGER_URL=http://localhost:8083
SUBMISSION_SERVICE_URL=http://localhost:8084
CONSENSUS_SERVICE_URL=http://localhost:8085
PAYMENT_SERVICE_URL=http://localhost:8086
REPUTATION_SERVICE_URL=http://localhost:8087
NOTIFICATION_SERVICE_URL=http://localhost:8088
