# Nexus Security - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_USER=nexus_user
DATABASE_PASSWORD=nexus_password
DATABASE_NAME=nexus_security
DATABASE_URL=postgresql://nexus_user:nexus_password@postgres:5432/nexus_security

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=change-this-to-a-long-random-string-at-least-32-characters
JWT_ACCESS_TOKEN_EXPIRY_HOURS=24
JWT_REFRESH_TOKEN_EXPIRY_DAYS=30

# Email Configuration (for notifications and user service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@nexus-security.io

