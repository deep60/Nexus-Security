# Nexus Security - Docker Environment Configuration
# Copy this file to .env and update the values

# ================================
# Database Configuration
# ================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_USER=nexus
POSTGRES_DB=nexus_security

# ================================
# Redis Configuration
# ================================
REDIS_PASSWORD=your_secure_redis_password_here

# ================================
# JWT Authentication
# ================================
JWT_SECRET=your_super_secure_jwt_secret_key_min_32_chars
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_min_32_chars
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# ================================
# Blockchain Configuration
# ================================
BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
BLOCKCHAIN_NETWORK=mainnet
CONTRACT_ADDRESS_BOUNTY=0x...
CONTRACT_ADDRESS_TOKEN=0x...
PRIVATE_KEY=your_wallet_private_key

# ================================
# API Configuration
# ================================
API_URL=https://api.nexus-security.com
WS_URL=wss://api.nexus-security.com
RUST_LOG=info

# ================================
# File Upload Configuration
# ================================
MAX_FILE_SIZE=104857600
UPLOAD_DIR=/app/uploads

# ================================
# Monitoring
# ================================
GRAFANA_PASSWORD=your_grafana_admin_password
GRAFANA_USER=admin
GRAFANA_ROOT_URL=https://monitoring.nexus-security.com

# ================================
# Docker Registry
# ================================
DOCKER_REGISTRY=nexus-security
VERSION=latest

# ================================
# IPFS Configuration
# ================================
IPFS_API_URL=http://ipfs:5001
IPFS_GATEWAY_URL=http://ipfs:8080
