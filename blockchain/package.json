{
  "name": "nexus-security-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Nexus-Security threat intelligence marketplace",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "console": "hardhat console",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:goerli": "hardhat run scripts/deploy.ts --network goerli",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "deploy:polygon": "hardhat run scripts/deploy.ts --network polygon",
    "deploy:mumbai": "hardhat run scripts/deploy.ts --network mumbai",
    "setup:local": "hardhat run scripts/setup.ts --network localhost",
    "setup:goerli": "hardhat run scripts/setup.ts --network goerli",
    "setup:sepolia": "hardhat run scripts/setup.ts --network sepolia",
    "setup:mainnet": "hardhat run scripts/setup.ts --network mainnet",
    "setup:polygon": "hardhat run scripts/setup.ts --network polygon",
    "setup:mumbai": "hardhat run scripts/setup.ts --network mumbai",
    "verify:local": "echo 'Verification not needed for local network'",
    "verify:goerli": "hardhat run scripts/verify.ts --network goerli",
    "verify:sepolia": "hardhat run scripts/verify.ts --network sepolia",
    "verify:mainnet": "hardhat run scripts/verify.ts --network mainnet",
    "verify:polygon": "hardhat run scripts/verify.ts --network polygon",
    "verify:mumbai": "hardhat run scripts/verify.ts --network mumbai",
    "full-deploy:local": "npm run deploy:local && npm run setup:local",
    "full-deploy:goerli": "npm run deploy:goerli && npm run setup:goerli && npm run verify:goerli",
    "full-deploy:sepolia": "npm run deploy:sepolia && npm run setup:sepolia && npm run verify:sepolia",
    "full-deploy:mainnet": "npm run deploy:mainnet && npm run setup:mainnet && npm run verify:mainnet",
    "full-deploy:polygon": "npm run deploy:polygon && npm run setup:polygon && npm run verify:polygon",
    "full-deploy:mumbai": "npm run deploy:mumbai && npm run setup:mumbai && npm run verify:mumbai",
    "estimate-gas": "hardhat run scripts/estimate-gas.ts",
    "check-network": "hardhat run scripts/check-network.ts",
    "generate-types": "hardhat compile && typechain --target ethers-v6 --out-dir typechain-types './artifacts/contracts/**/*.json'",
    "lint": "eslint 'scripts/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "eslint 'scripts/**/*.ts' 'test/**/*.ts' --fix",
    "prettier": "prettier --write 'scripts/**/*.ts' 'test/**/*.ts'",
    "prettier:check": "prettier --check 'scripts/**/*.ts' 'test/**/*.ts'"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "chai": "^4.5.0",
    "eslint": "^9.34.0",
    "eslint-plugin-prettier": "^5.5.4",
    "ethers": "^6.15.0",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^2.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox-viem": "^4.1.0",
    "dotenv": "^17.2.1",
    "typescript": "^5.9.2"
  }
}
