# Nexus-Security Database Environment Configuration
# Copy this file to .env and update with your actual values

# ==================== PostgreSQL Configuration ====================
POSTGRES_PORT=5432
POSTGRES_PASSWORD=nexus_postgres_password
# Database connection string for backend services
DATABASE_URL=postgresql://postgres:nexus_postgres_password@localhost:5432/nexus_security

# ==================== MongoDB Configuration ====================
MONGODB_PORT=27017
MONGODB_ROOT_PASSWORD=nexus_mongo_root_password
MONGODB_PASSWORD=nexus_mongo_password
# MongoDB connection string for backend services
MONGODB_URL=mongodb://nexus_admin:nexus_mongo_password@localhost:27017/nexus_security?authSource=nexus_security

# ==================== Redis Configuration ====================
REDIS_PORT=6379
REDIS_PASSWORD=
# Redis connection string for backend services
REDIS_URL=redis://localhost:6379

# ==================== Admin Tools (Development Only) ====================
# pgAdmin
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@nexus-sec.dev
PGADMIN_PASSWORD=admin123

# Mongo Express
MONGOEXPRESS_PORT=8081
MONGOEXPRESS_USER=admin
MONGOEXPRESS_PASSWORD=admin123

# Redis Commander
REDIS_COMMANDER_PORT=8082

# ==================== Application Configuration ====================
# Environment (development, staging, production)
ENVIRONMENT=development

# JWT Secret (change in production!)
JWT_SECRET=change-me-in-production-this-should-be-at-least-32-characters-long

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=http://localhost:8545
CHAIN_ID=1337

# Contract Addresses (update after deployment)
CONTRACT_BOUNTY_MANAGER=0x5FbDB2315678afecb367f032d93F642f64180aa3
CONTRACT_THREAT_TOKEN=0xe7f1725E7734CE288F8367e1Bb143E90bb3F0512
CONTRACT_REPUTATION_SYSTEM=0x9fE46736679d2D9a65F0992F2272dE9f3c7fa6e0

# ==================== Security Configuration ====================
# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ==================== Feature Flags ====================
ENABLE_MFA=false
ENABLE_OAUTH2=false

# ==================== Monitoring ====================
LOG_LEVEL=info
SENTRY_DSN=

# ==================== Service URLs ====================
ANALYSIS_ENGINE_URL=http://localhost:8081
BOUNTY_MANAGER_URL=http://localhost:8082
NOTIFICATION_SERVICE_URL=http://localhost:8083
STORAGE_SERVICE_URL=http://localhost:8084
