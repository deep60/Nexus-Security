# Nexus Security - Environment Variables Configuration

# Application
NODE_ENV=development
PORT=5000

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:5173

# Database Configuration
# PostgreSQL connection string (for production)
DATABASE_URL=postgresql://user:password@localhost:5432/nexus_security

# Redis Configuration (for production sessions)
REDIS_URL=redis://localhost:6379

# Authentication
# JWT secret key - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# Session expiry in milliseconds (default: 7 days)
SESSION_EXPIRY=604800000

# Security
# bcrypt salt rounds (higher = more secure but slower)
BCRYPT_SALT_ROUNDS=10
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Blockchain Configuration
# Ethereum provider URL (Infura, Alchemy, etc.)
ETH_PROVIDER_URL=https://mainnet.infura.io/v3/YOUR-PROJECT-ID
# Contract addresses (deployed smart contracts)
PAYMENT_CONTRACT_ADDRESS=
STAKING_CONTRACT_ADDRESS=
REWARD_CONTRACT_ADDRESS=

# S3/MinIO Configuration (for file storage)
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=nexus-security-uploads
# For MinIO (local S3-compatible storage), use these instead:
# AWS_ENDPOINT_URL=http://localhost:9000
# AWS_ACCESS_KEY_ID=minioadmin
# AWS_SECRET_ACCESS_KEY=minioadmin

# IPFS Configuration (OPTIONAL - currently disabled)
# IPFS gateway URL
IPFS_GATEWAY=https://ipfs.infura.io:5001
# IPFS project credentials
IPFS_PROJECT_ID=
IPFS_PROJECT_SECRET=

# Email Configuration (AWS SES for notifications)
# AWS SES SMTP endpoint (e.g., email-smtp.us-east-1.amazonaws.com)
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
# AWS SES SMTP credentials (different from AWS access keys)
SMTP_USER=your-ses-smtp-username
SMTP_PASSWORD=your-ses-smtp-password
EMAIL_FROM=noreply@nexus-security.com
# AWS region for SES
AWS_SES_REGION=us-east-1

# Monitoring & Logging
# Sentry DSN for error tracking
SENTRY_DSN=

# Malware Analysis Configuration
# ClamAV (running in Docker)
CLAMAV_HOST=localhost
CLAMAV_PORT=3310
ENABLE_CLAMAV=true
# YARA rules directory
YARA_RULE_PATH=./rules
# Temporary upload directory
UPLOAD_DIR=./temp/nexus-uploads

# Feature Flags
ENABLE_BLOCKCHAIN=false
ENABLE_IPFS=false
ENABLE_EMAIL=true
ENABLE_CLAMAV=true

# API Keys (External Services)
VIRUSTOTAL_API_KEY=
HYBRID_ANALYSIS_API_KEY=
