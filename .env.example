# Nexus Security - Environment Variables Configuration

# Application
NODE_ENV=development
PORT=5000

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:5173

# Database Configuration
# PostgreSQL connection string (for production)
DATABASE_URL=postgresql://user:password@localhost:5432/nexus_security

# Redis Configuration (for production sessions)
REDIS_URL=redis://localhost:6379

# Authentication
# JWT secret key - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# Session expiry in milliseconds (default: 7 days)
SESSION_EXPIRY=604800000

# Security
# bcrypt salt rounds (higher = more secure but slower)
BCRYPT_SALT_ROUNDS=10
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Blockchain Configuration
# Ethereum provider URL (Infura, Alchemy, etc.)
ETH_PROVIDER_URL=https://mainnet.infura.io/v3/YOUR-PROJECT-ID
# Contract addresses (deployed smart contracts)
PAYMENT_CONTRACT_ADDRESS=
STAKING_CONTRACT_ADDRESS=
REWARD_CONTRACT_ADDRESS=

# IPFS Configuration
# IPFS gateway URL
IPFS_GATEWAY=https://ipfs.infura.io:5001
# IPFS project credentials
IPFS_PROJECT_ID=
IPFS_PROJECT_SECRET=

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@nexus-security.com

# Monitoring & Logging
# Sentry DSN for error tracking
SENTRY_DSN=

# Feature Flags
ENABLE_BLOCKCHAIN=false
ENABLE_IPFS=false
ENABLE_EMAIL=false

# API Keys (External Services)
VIRUSTOTAL_API_KEY=
HYBRID_ANALYSIS_API_KEY=
